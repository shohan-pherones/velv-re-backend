generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id           String   @id @default(uuid())
  title        String
  description  String?
  image        String?
  dateTime     DateTime
  location     String
  maxAttendees Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime
}
